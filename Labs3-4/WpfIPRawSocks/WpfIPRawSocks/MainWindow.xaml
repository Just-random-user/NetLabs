<Window x:Class="WpfIPRawSocks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIPRawSocks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="IpAddress" Width="100" Height="25" VerticalAlignment="Top" 
                 HorizontalAlignment="Left" Margin="10">192.168.1.37</TextBox>
        <TextBox Name="Port" Width="100" Height="25" VerticalAlignment="Top" 
                 HorizontalAlignment="Right" Margin="10">5254</TextBox>
        <Button Click="ButtonBase_OnClick" Width="100" Height="25" VerticalAlignment="Top" 
                HorizontalAlignment="Center" Margin="10">Send!</Button>
        <TextBox Name="Message" Width="100" Height="25" VerticalAlignment="Center" 
                 HorizontalAlignment="Center" Margin="10">content</TextBox>
        <TextBlock Name="TextBlock" Width="500" Height="100" VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center" Margin="10"></TextBlock>
    </Grid>
</Window>
