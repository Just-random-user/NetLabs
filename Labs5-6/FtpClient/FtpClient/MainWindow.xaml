<Window x:Class="FtpClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FtpClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="TxtResult" Height="100" Width="100" Margin="10" HorizontalAlignment="Center"
                 VerticalAlignment="Bottom">Result</TextBlock>
        <TextBox Name="TxtUrl" Height="100" Width="100" Margin="10" HorizontalAlignment="Center"
                 VerticalAlignment="Top">127.0.0.1/</TextBox>
        <TextBox Name="FileName" Height="100" Width="100" Margin="10" HorizontalAlignment="Right"
                 VerticalAlignment="Top">Filename</TextBox>
        <Button Click="Get_OnClick" Name="Get" Height="100" Width="100" Margin="10" HorizontalAlignment="Center"
                VerticalAlignment="Center">Get!</Button >
        <TextBox Name="TxtRead" HorizontalAlignment="Left" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" 
                 Width="100" Height="100">ftp://</TextBox>
    </Grid>
</Window>
